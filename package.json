{
  "name": "email-editor",
  "version": "1.0.0",
  "description": "A drag-and-drop email editor.",
  "private": true,
  "homepage": "https://dreadedapparatus.github.io/wysiwyg-builder/",
  "scripts": {
    "start": "esbuild index.tsx --bundle --outfile=dist/index.js --jsx=automatic --servedir=.",
    "build": "rm -rf dist && mkdir dist && esbuild index.tsx --bundle --outfile=dist/index.js --jsx=automatic && cp index.html dist/ && cp index.css dist/"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.0",
    "esbuild": "^0.20.2",
    "typescript": "^5.4.5"
  }
}
